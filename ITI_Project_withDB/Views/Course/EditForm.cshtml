@model Course
@{
    ViewData["Title"] = "EditForm";
}

<h1>Edit Course</h1>


<form action="/course/EditInDB">
    <input value="@Model.Id" name="Id"  hidden/>
    <label for="Name">Name</label>
    <input type="text" id="Name" name="Name" value="@Model.Name"/>
    <br />

    <label for="Description">Description</label>
    <input type="text" id="Description" name="Description" value="@Model.Description" />
    <br />


    <label for="totalHours">Total Hours</label>
    <input type="number" id="totalHours" name="totalHours" value="@Model.totalHours"/>
    <br />

    <label for="FullMark">Full Mark</label>
    <input type="number" id="FullMark" name="FullMark" value="@Model.FullMark" />
    <br />

    <label for="PassMark">Pass Mark</label>
    <input type="number" id="PassMark" name="PassMark" value="@Model.PassMark" />
    <br />

    <label for="instructor">Instructor</label>
    <select name="ins_Id" id="instructor">
        @foreach (Instructor ins in ViewBag.Ins)
        {
            @if(ins.Id == Model.ins_Id)
            {
                <option value="@ins.Id" selected>@ins.Name</option>
            }
            else
            {
                <option value="@ins.Id">@ins.Name</option>
            }
        }
    </select>
    <br />

    <input type="submit" value="Edit" />
</form>